{
    "compilerOptions": {
        "rootDir": "src",
        "noEmit": true,
        "target": "es5",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue"]
}
